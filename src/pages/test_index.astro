---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} metaTitle={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="flex justify-between w-full">
      <div class="flex flex-col justify-center align-middle w-1/6">
        <img
          src="https://avatars.githubusercontent.com/u/19311157?v=4"
          class="w-12"
        />
        <h1 class="text-xl">Jay Wilson</h1>
      </div>
      <div class="grow">This is the main thing</div>
    </main>
    <Footer />
  </body>
</html>
