---
import { getCollection } from "astro:content";

const featuredPosts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .filter((a) => a.data.isFeatured?.valueOf() === true)
  .slice(0, 1);
---

<section>
  <h2>Featured post</h2>
  <ul>
    {
      featuredPosts.map((post) => (
        <li class="my-6 md:my-2 bg-orange-200 md:bg-inherit rounded-md md:rounded-none shadow-sm md:shadow-none hover:bg-orange-200 transition ease-in-out duration-300">
          <a href={`/blog/${post.slug}`} class="md:flex">
            {post.data.heroImage && (
              <img
                src={post.data.heroImage}
                alt=""
                class="rounded-t-md md:rounded-none w-full md:w-32 md:h-full"
              />
            )}
            <div class="p-4 md:py-0">
              <h3 class="text-lg font-bold">{post.data.title}</h3>
              <p class="p-none">{post.data.description}</p>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>
