---
import NavigationLink from "./NavigationLink.astro";
const navLocations = [
  { link: "/", title: "Home", icon: "fa-house" },
  { link: "/blog", title: "Blog", icon: "fa-keyboard" },
  { link: "/work", title: "Work", icon: "fa-briefcase" },
  { link: "/about", title: "About", icon: "fa-circle-info" },
];
---

<nav>
  {
    navLocations.map((location) => (
      <NavigationLink
        activeClass="fa-solid"
        inactiveClass="fa-regular"
        icon={location.icon}
        link={location.link}
        label={location.title}
      />
    ))
  }
</nav>
