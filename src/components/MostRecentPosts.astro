---
import FormattedDate from "./FormattedDate.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 5);
---

<section>
    <ul>
        { posts.map((post) => (
            <li class="py-2">
                <a href={`/blog/${post.slug}/`} class="group">
                    <h3 class="text-cyan-800 group-hover:underline group-hover:text-cyan-500">{post.data.title}</h3>
                    <p><FormattedDate date={post.data.updatedDate ?? post.data.pubDate}/></FormattedDate></p>
                </a>
            </li>
        ))}
    </ul>
</section>