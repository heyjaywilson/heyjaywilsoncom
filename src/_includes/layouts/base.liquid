<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <meta name="generator" content="{{eleventy.generator}}">
    {% if canonical_url %}<link rel="canonical" href="{{ canonical_url }}">{% endif %}
    <!-- Webmentions -->
    <link
      rel="webmention"
      href="https://webmention.io/heyjaywilson.com/webmention"
    >
    <link rel="pingback" href="https://webmention.io/heyjaywilson.com/xmlrpc">
    <!-- Primary Meta Tags -->
    <title>{% if title %}{{ title }} - By Jay{% else %}ðŸ‘‹ Hi! I'm Jay{% endif %}</title>
    <meta name="title" content="{% if title %}{{ title }}{% else %}ðŸ‘‹ Hi! I'm Jay{% endif %} - A site by HeyJayWilson">
    <meta name="description" content="{% if description %}{{description}}{% else %}A page for HeyJayWilson.com{% endif %}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://heyjaywilson.com{{ page.url }}">
    <meta property="og:title" content="{% if title %}{{ title }}{% else %}ðŸ‘‹ Hi! I'm Jay{% endif %} - A site by HeyJayWilson">
    <meta property="og:description" content="{% if description %}{{description}}{% else %}A page for HeyJayWilson.com{% endif %}">
    {% comment %} <meta property="og:image" content="{new" URL(image, Astro.url)}> {% endcomment %}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://heyjaywilson.com{{ page.url }}">
    <meta property="twitter:title" content="{% if title %}{{ title }}{% else %}ðŸ‘‹ Hi! I'm Jay{% endif %} - A site by HeyJayWilson">
    <meta property="twitter:description" content="{% if description %}{{description}}{% else %}A page for HeyJayWilson.com{% endif %}">
    {% comment %} <meta property="twitter:image" content="{new" URL(image, Astro.url)}> {% endcomment %}
  </head>
  <body>
    {{ content }}
    <!-- Font Awesome -->
    <script defer src="https://kit.fontawesome.com/6be091a552.js" crossorigin="anonymous"></script>

    <!-- Analytics using telemetry deck-->
    <script
      defer
      src="https://cdn.telemetrydeck.com/websdk/telemetrydeck.min.js"
      data-app-id="7FD683B8-983F-4FDA-8838-4B4DC4FAF911"
    ></script>
  </body>
</html>
