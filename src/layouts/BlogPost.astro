---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/site/BaseHead.astro';
import Navigation from '../components/global/navigation/Navigation.astro';
import Footer from '../components/global/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import MentionsForPage from '../components/mentions/MentionsForPage.astro';

type Props = CollectionEntry<'blog'>['data'];

const {
  metatitle,
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  includeBMC,
  tags,
  canonicalURL,
  type
} = Astro.props;

const showDescription = (type === "article")
const showTitle = (type === "article")
---

<html lang="en">
  <head>
    <BaseHead
      metaTitle={metatitle ?? title}
      title={title}
      description={description}
      image={heroImage ?? '/blog-placeholder-2.jpg'}
    />
  </head>

  <body>
    <Navigation />
    <main>
      <article class="px-2">
        <div>
          {
            heroImage && (
              <img
                class="rounded-md mb-4 w-full h-auto"
                src={heroImage}
                alt=""
              />
            )
          }
        </div>
        <!-- Article -->
        <div>
          <div class="font-mono pb-4">
            {showTitle && <h1>{title}</h1>}
            {showDescription && <p class="text-sm">{description}</p>}
            <div class="text-xs flex gap-x-4">
              <div>Published: <FormattedDate date={pubDate} /></div>
              {
                updatedDate && (
                  <div>
                    Last updated: <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            {
              canonicalURL && (
                <blockquote class="italic bg-transparent border-orange-800 text-slate-600">
                  Originally posted <a href={canonicalURL}>here</a>
                </blockquote>
              )
            }
          </div>
          <slot />
        </div>
        <hr class="mt-4 my-2 border-slate-400 rounded-md border-1;" />
        <div id="tags" class="py-4 flex flex-wrap">
          {
            tags.map((tag) => (
              <span class="mr-4 font-mono">
                <a href={`/tag/${tag}`} class="no-underline">
                  <span class="font-bold">#</span>
                  {tag}
                </a>
              </span>
            ))
          }
        </div>
      </article>

      {
        includeBMC && (
          <div class="text-center flex flex-col mb-8">
            <p class="">
              Thanks for reading! If you want these posts directly in your
              inbox, then please{' '}
              <a href="https://heyjaywilson.substack.com/subscribe?">
                subscribe on Substack.
              </a>
            </p>
            <>
              <script
                type="text/javascript"
                src="https://storage.ko-fi.com/cdn/widget/Widget_2.js"
              />
              <script type="text/javascript">
                kofiwidget2.init('Buy me a coffee', '#29abe0',
                'W7W2FFDSW');kofiwidget2.draw();
              </script>
            </>
          </div>
        )
      }
      <MentionsForPage />
    </main>

    <Footer />
    <style is:global>
      h1 {
        @apply text-6xl;
      }
      h2 {
        @apply pt-4;
      }
      h3 {
        @apply pt-2 pb-1;
      }
      p {
        @apply py-2;
      }
      ul {
        @apply list-disc list-outside p-2 ms-8;
      }
      blockquote {
        @apply px-4 py-1 my-4 border-l-4 border-cyan-500 bg-cyan-900/10 rounded-r-md w-full;
      }

      blockquote > p {
        @apply py-1;
      }
      blockquote > p > strong {
        @apply font-bold font-mono;
      }

      hr {
        @apply my-2 border-cyan-800 rounded-md border-2;
      }
      pre {
        @apply p-8 rounded-md;
      }
    </style>
  </body>
</html>
